<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('./partials/header', { user }) %>
  <div class="container mt-4">
    <h2>Your Groups</h2>
    <ul class="list-group mb-4">
      <% user.groups.forEach(group => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= group.name %> (<%= group.groupId %>)</span>
          <a href="/group/<%= group.groupId %>" class="btn btn-primary btn-sm">Enter</a>
        </li>
      <% }) %>
    </ul>

    <h4>Join a Group by ID</h4>
    <form action="/dashboard/join" method="POST">
      <div class="input-group">
        <input type="text" name="groupId" class="form-control" placeholder="Enter Group ID" required />
        <button class="btn btn-outline-success">Join</button>
      </div>
    </form>
  </div>
</body>
</html>
